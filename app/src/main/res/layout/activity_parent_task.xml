<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jxw679.mogul.activities.ParentTask">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/navbar"/>

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="28dp"
        android:id="@+id/back_button"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task name"
        android:textSize="48dp"
        android:id="@+id/task_name_edit"
        android:layout_below="@id/navbar"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="DESCRIPTION"
        android:id="@+id/balance_text"
        android:layout_below="@+id/task_name_edit"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        />

    <View
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/balance_text"
        android:layout_marginLeft="30dp"
        android:background="@color/lime_green" />

    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="You must mow both the front
and backyard and make sure
you donâ€™t miss a spot."
        android:id="@+id/description_text"
        android:layout_below="@id/separator_1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="STATUS"
        android:id="@+id/status_label"
        android:layout_below="@+id/description_text"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        />

    <View
        android:id="@+id/separator_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/status_label"
        android:layout_marginLeft="30dp"
        android:background="@color/lime_green" />

    <Spinner
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:id="@+id/status_spinner"
        android:layout_below="@+id/separator_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="ASSIGNED TO"
        android:id="@+id/assign_to_label"
        android:layout_below="@+id/status_spinner"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        />

    <View
        android:id="@+id/separator_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/assign_to_label"
        android:layout_marginLeft="30dp"
        android:background="@color/lime_green" />

</RelativeLayout>
