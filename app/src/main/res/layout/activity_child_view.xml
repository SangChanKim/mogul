<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/light_blue"
    tools:context=".activities.ParentView">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/navbar"/>

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="28dp"
        android:id="@+id/back_button"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_button"/>

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/navbar"
        android:src="@drawable/default_profile_pic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/child_name"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_pic"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="BALANCE"
        android:id="@+id/balance_text"
        android:layout_below="@+id/child_name"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        />

    <View
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/balance_text"
        android:layout_marginLeft="30dp"
        android:background="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="72dp"
        android:text="$40.00"
        android:id="@+id/child_balance"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/separator_1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASSIGNED TASKS"
        android:textSize="16dp"
        android:id="@+id/assigned_tasks"
        android:layout_below="@+id/child_balance"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        />

    <View
        android:id="@+id/separator_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/assigned_tasks"
        android:layout_marginLeft="30dp"
        android:background="@android:color/white" />


    <RelativeLayout
        android:id="@+id/task_button_layout"
        android:layout_width="260dp"
        android:layout_height="86dp"
        android:layout_below="@id/assigned_tasks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="260dp"
            android:layout_height="86dp"
            android:id="@+id/assigned_task"
            android:src="@drawable/assigned_task_button"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_text"
            android:text="Task"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_amount"
            android:layout_below="@id/task_text"
            android:text="$4.00"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>



</RelativeLayout>

</ScrollView>